<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="colorPrimaryDark">@color/dark_gray</item>
    </style>

    <style name="myDropDownItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="myDropDownListViewStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:background">@color/dark_gray_2</item>
    </style>

    <style name="ClienteAndroid" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_gray</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:windowBackground">@color/dark_gray</item>
        <item name="android:colorBackground">@color/dark_gray</item>

        <item name="android:dropDownItemStyle">@style/myDropDownItemStyle</item>
        <item name="android:dropDownListViewStyle">@style/myDropDownListViewStyle</item>

        <item name="cBackgroundColor">@color/dark_gray</item>
        <item name="cColorOnPrimary">@color/white</item>
        <item name="cColorOnSecondary">@color/white</item>
        <item name="cCardBackgroundColor">@color/dark_gray_2</item>
        <item name="cCardImageColor">@color/secondary_light</item>
        <item name="cDisconnectButtonBackgroundColor">@color/red</item>
        <item name="cDefaultButtonBackgroundColor">@color/blue</item>
        <item name="cCardLoginInputBackgroundColor">@color/dark_gray_2</item>
        <item name="cDecorationBarBackgroundColor">@color/secondary_main</item>
        <item name="cInputHintColor">@color/light_gray_3</item>
        <item name="cColorSchedule">@color/dark_blue</item>

    </style>

</resources>